{
  "name": "verkle-cryptography-wasm",
  "version": "0.0.5",
  "description": "Verkle cryptography implementation in JavaScript",
  "author": "Kevaundray Wedderburn",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "cli/ts-build.sh && src/rust-verkle-wasm/build.sh",
    "publish": "echo ðŸ“¡ publishing `$npm_package_name` && npm publish",
    "test": "jest",
    "lint": "eslint --fix --config ./.eslintrc.js . --ext .js,.jsx,.ts,.tsx ",
    "postinstall": "npm run build && cd src/rust-verkle-wasm && npm run build"
  },
  "dependencies": {
    "rust-verkle-wasm": "file:./src/rust-verkle-wasm"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "engine": {
    "node": ">=18.0.0"
  }
}
