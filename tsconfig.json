{
  "include": ["src/js/**/*","src/rust-wasm/**/*"],
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "module": "Node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "target": "es2020",
    "lib": ["ES2020", "DOM"],
    "rootDir": "src/js",
  }
}
